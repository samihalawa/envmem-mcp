{
	"name": "envmem",
	"version": "1.2.0",
	"description": "EnvMem - Personal environment variable memory with semantic search. Store, search, and manage your environment variables with AI-powered semantic search.",
	"main": "bin/envmem.js",
	"type": "module",
	"bin": {
		"envmem": "bin/envmem.js"
	},
	"files": [
		"bin/"
	],
	"scripts": {
		"dev": "wrangler dev",
		"deploy": "wrangler deploy",
		"cf:d1:create": "wrangler d1 create env-reference-db",
		"cf:d1:migrations": "wrangler d1 migrations apply env-reference-db",
		"cf:vectorize:create": "wrangler vectorize create env-embeddings --dimensions=768 --metric=cosine",
		"cf:queue:create": "wrangler queues create env-indexing-queue",
		"setup": "npm run cf:d1:create && npm run cf:vectorize:create && npm run cf:queue:create"
	},
	"keywords": ["mcp", "environment", "variables", "semantic-search", "cloudflare", "ai", "claude", "model-context-protocol", "env", "dotenv"],
	"author": "samihalawa",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/samihalawa/envmem-mcp"
	},
	"homepage": "https://envmem.com",
	"bugs": {
		"url": "https://github.com/samihalawa/envmem-mcp/issues"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.20.0",
		"zod": "^3.25.46"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20241127.0",
		"wrangler": "^3.94.0",
		"typescript": "^5.7.2"
	}
}
